<menus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-menu.xsd">
    <menu name="sendFiles" extends-resource="component://common/widget/CommonMenus.xml"
          default-menu-item-name="send" type="simple" menu-container-style="button-bar tab-bar"
          default-selected-style="" selected-menuitem-context-field-name="tabButtonItem">
        <menu-item name="send" title="" tooltip="发送">
            <link target="javascript:$.file.sendFiles()" url-mode="plain" style="icosg-plus1"/>
        </menu-item>
    </menu>

    <menu name="fileTypeData" extends-resource="component://common/widget/CommonMenus.xml"
          default-menu-item-name="fileType" type="simple" menu-container-style="button-bar tab-bar"
          default-selected-style="" selected-menuitem-context-field-name="tabButtonItem">
        <menu-item name="addfileType" title="" tooltip="增加">
            <link target="javascript:$.FileData.addFileType('增加文档类别')" url-mode="plain" style="icosg-plus1"/>
        </menu-item>
    </menu>
    <menu name="addfileTypeData" extends-resource="component://common/widget/CommonMenus.xml"
          default-menu-item-name="addfileTypeData" type="simple" menu-container-style="button-bar tab-bar"
          default-selected-style="" selected-menuitem-context-field-name="tabButtonItem">
        <menu-item name="addfileTypeData" title="" tooltip="增加">
            <link target="javascript:$.FileData.createFileData('发布文档资料')" url-mode="plain" style="icosg-plus1"/>
        </menu-item>
    </menu>

    <menu name="testingFile" extends-resource="component://common/widget/CommonMenus.xml"
          default-menu-item-name="addfileTypeData" type="simple" menu-container-style="button-bar tab-bar"
          default-selected-style="" selected-menuitem-context-field-name="tabButtonItem">
        <menu-item name="testingFile" title="" tooltip="检测文件">
            <link target="javascript:$.fileService.testingFile()" url-mode="plain" style="icosg-file"/>
        </menu-item>
    </menu>
</menus>
